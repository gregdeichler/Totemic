<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="Totemic.lua"/>
	
	<Frame name="TotemicFrame" toplevel="true" frameStrata="MEDIUM" enableMouse="true" movable="true" parent="UIParent" hidden="false">
		<Size>
			<AbsDimension x="180" y="60"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Scripts>
			<OnLoad>
				TotemicFrame:Show()
			</OnLoad>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize><AbsValue val="16"/></EdgeSize>
			<TileSize><AbsValue val="16"/></TileSize>
			<BackgroundInsets>
				<AbsInset left="4" right="4" top="4" bottom="4"/>
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<Button name="TotemicEarth" id="1">
				<Size><AbsDimension x="36" y="36"/></Size>
				<Anchors>
					<Anchor point="TOPLEFT"><Offset x="10" y="-10"/></Offset>
				</Anchors>
				<NormalTexture file="Interface\Icons\Spell_Nature_StrengthOfEarthTotem02"/>
				<Scripts>
					<OnClick>Totemic_CastTotem(1)</OnClick>
					<OnEnter>GameTooltip:SetOwner(this,"ANCHOR_RIGHT");GameTooltip:SetText("Earth Totem");GameTooltip:Show()</OnEnter>
					<OnLeave>GameTooltip:Hide()</OnLeave>
				</Scripts>
			</Button>
			<Button name="TotemicFire" id="2">
				<Size><AbsDimension x="36" y="36"/></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="TotemicEarth" relativePoint="RIGHT"><Offset x="5" y="0"/></Offset>
				</Anchors>
				<NormalTexture file="Interface\Icons\Spell_Fire_SearingTotem"/>
				<Scripts>
					<OnClick>Totemic_CastTotem(2)</OnClick>
					<OnEnter>GameTooltip:SetOwner(this,"ANCHOR_RIGHT");GameTooltip:SetText("Fire Totem");GameTooltip:Show()</OnEnter>
					<OnLeave>GameTooltip:Hide()</OnLeave>
				</Scripts>
			</Button>
			<Button name="TotemicWater" id="3">
				<Size><AbsDimension x="36" y="36"/></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="TotemicFire" relativePoint="RIGHT"><Offset x="5" y="0"/></Offset>
				</Anchors>
				<NormalTexture file="Interface\Icons\Spell_Nature_ManaRegenTotem"/>
				<Scripts>
					<OnClick>Totemic_CastTotem(3)</OnClick>
					<OnEnter>GameTooltip:SetOwner(this,"ANCHOR_RIGHT");GameTooltip:SetText("Water Totem");GameTooltip:Show()</OnEnter>
					<OnLeave>GameTooltip:Hide()</OnLeave>
				</Scripts>
			</Button>
			<Button name="TotemicAir" id="4">
				<Size><AbsDimension x="36" y="36"/></Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="TotemicWater" relativePoint="RIGHT"><Offset x="5" y="0"/></Offset>
				</Anchors>
				<NormalTexture file="Interface\Icons\Spell_Nature_Windfury"/>
				<Scripts>
					<OnClick>Totemic_CastTotem(4)</OnClick>
					<OnEnter>GameTooltip:SetOwner(this,"ANCHOR_RIGHT");GameTooltip:SetText("Air Totem");GameTooltip:Show()</OnEnter>
					<OnLeave>GameTooltip:Hide()</OnLeave>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
</Ui>
